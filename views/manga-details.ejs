<!DOCTYPE  html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <meta name="description" content="Built with jdoodle.ai - <%= manga.title %> details - MangaVerse">
  <meta property="og:title" content="<%= manga.title %> - MangaVerse">
  <meta property="og:description" content="Built with jdoodle.ai - View details for <%= manga.title %>">
  <meta property="og:image" content="<%= manga.thumbnail || 'https://images.unsplash.com/photo-1602416222941-a72a356dab04' %>">
  <title><%= manga.title %> | MangaVerse</title>
  <link rel="stylesheet" href="/css/style.css" />
  <link href="https://fonts.googleapis.com/css2?family=Anton&family=DM+Sans&family=Righteous&family=Quicksand:wght@400;600&display=swap" rel="stylesheet">
  <link rel="apple-touch-icon" sizes="180x180" href="/favicon/apple-touch-icon.png">
  <link rel="icon" type="image/png" sizes="32x32" href="/favicon/favicon-32x32.png">
  <link rel="icon" type="image/png" sizes="16x16" href="/favicon/favicon-16x16.png">
  <link rel="manifest" href="/site.webmanifest">
</head>
<body>
  <%- include('partials/navbar') %>
  
  <main class="manga-details">
    <div class="manga-hero">
      <div class="manga-poster">
        <img src="<%= manga.thumbnail || '/images/no-image.jpg' %>" alt="<%= manga.title %>">
        <% if (manga.rate) { %>
          <div class="manga-score">
            <span><%= manga.rate %></span>
            <span class="score-star">â˜…</span>
          </div>
        <% } %>
      </div>
      <div class="manga-info">
        <h1><%= manga.title %></h1>
        <% if (manga.otherName) { %>
          <h2 class="japanese-title"><%= manga.otherName %></h2>
        <% } %>
        
        <div class="manga-stats">
          <div class="stat">
            <span class="stat-label">Status:</span>
            <span class="stat-value"><%= manga.status || 'Unknown' %></span>
          </div>
          <div class="stat">
            <span class="stat-label">Type:</span>
            <span class="stat-value"><%= manga.type || 'Manga' %></span>
          </div>
          <div class="stat">
            <span class="stat-label">Views:</span>
            <span class="stat-value"><%= manga.views || 'Unknown' %></span>
          </div>
          <div class="stat">
            <span class="stat-label">Rating:</span>
            <span class="stat-value"><%= manga.rate || 'Unknown' %></span>
          </div>
          <div class="stat">
            <span class="stat-label">Updated:</span>
            <span class="stat-value"><%= manga.updatedAt || 'Unknown' %></span>
          </div>
        </div>
        
        <div class="manga-categories">
          <h3>Genres</h3>
          <div class="categories-list">
            <% if (manga.categories && manga.categories.length > 0) { %>
              <% manga.categories.forEach(genre => { %>
                <a href="/the-loai/<%= genre.slug %>" class="category-tag"><%= genre.name %></a>
              <% }); %>
            <% } else { %>
              <span>No genres available</span>
            <% } %>
          </div>
        </div>
        
        <div class="manga-description">
          <h3>Synopsis</h3>
          <p><%= manga.description || 'No description available.' %></p>
        </div>
        
        <% if (manga.authors && manga.authors.length > 0) { %>
        <div class="manga-authors">
          <h3>Authors</h3>
          <div class="authors-list">
            <% manga.authors.forEach(author => { %>
              <span class="author"><%= author %></span>
            <% }); %>
          </div>
        </div>
        <% } %>
        
        <% if (manga.source) { %>
        <div class="manga-serializations">
          <h3>Source</h3>
          <div class="serializations-list">
            <span class="serialization"><%= manga.source %></span>
          </div>
        </div>
        <% } %>
      </div>
    </div>
    
    <% if (chapters && chapters.length > 0) { %>
    <section class="section manga-chapters-section">
      <h2 class="section-title">Chapters</h2>
      <div class="manga-chapters">
        <div class="chapter-list">
          <% chapters.forEach(chapter => { %>
            <div class="chapter-item">
              <a href="/truyen-tranh/<%= manga.slug %>/<%= chapter.slug %>" class="chapter-link">
                <span class="chapter-name"><%= chapter.name %></span>
                <span class="chapter-updated"><%= chapter.updatedAt %></span>
              </a>
            </div>
          <% }); %>
        </div>
      </div>
    </section>
    <% } %>
    
    <% if (related && related.length > 0) { %>
    <section class="section recommendations-section">
      <h2 class="section-title">You May Also Like</h2>
      <div class="scroll-container">
        <% related.forEach(item => { %>
          <div class="card">
            <a href="/truyen-tranh/<%= item.slug %>">
              <img src="<%= item.thumbnail || '/images/no-image.jpg' %>" alt="<%= item.title %>">
              <h3><%= item.title %></h3>
            </a>
          </div>
        <% }); %>
      </div>
    </section>
    <% } %>
  </main>
  
  <%- include('partials/footer') %>
  
  <script src="/js/script.js"></script>
</body>
</html>
 