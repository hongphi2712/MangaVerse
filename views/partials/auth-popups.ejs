    font-weight: normal;
  }
  
  .close-popup {
    color: #666;
    font-size: 28px;
    font-weight: normal;
    cursor: pointer;
    line-height: 24px;
    font-family: 'Righteous', cursive;
  }
  
  .close-popup:hover {
    color: #ff4757;
  }
  
  .auth-form {
    display: flex;
    flex-direction: column;
    gap: 15px;
  }
  
  .form-group {
    margin-bottom: 5px;
  }
  
  .form-group input {
    width: 100%;
    padding: 14px 16px;
    border: none;
    border-radius: 6px;
    background-color: #2a2a2a;
    color: #fff;
    font-size: 16px;
    font-family: 'Righteous', cursive;
    box-sizing: border-box;
  }
  
  .form-group input::placeholder {
